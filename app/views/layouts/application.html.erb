	<link href='http://fonts.googleapis.com/css?family=Inconsolata' rel='stylesheet' type='text/css'>

  <%= stylesheet_link_tag 'layout' %>
  <%= csrf_meta_tag %>
  
  <%= yield :head %>
</head>
<body>
	<div id="menu" class="clear_fix">
		<div id="selection" class="left">
			<a id="logo" href="/">ANTI-LIKE MAGNET</a>
			<a class="item <%= ['index', 'detail'].include?(params[:action]) ? 'item_selected' : '' %>" href="/">DATA</a>
			<a class="item <%= params[:action] == 'about' ? 'item_selected' : '' %>" href="/about">ABOUT</a>
		</div>
		<div id="update" class="left">
			<%= display_log(@latest_log) %>
		</div>
	</div>
	
  <%= yield %>
  
  
  <!-- Javascript starts here -->
  <%= javascript_include_tag 'jquery.min', 'jquery.timeago', 'rails', 'application' %>
  
  <script type="text/javascript" charset="utf-8">
    $(function() {
      setInterval("getLatestLog()", 3000);
    });
  </script>
  
  <script type="text/javascript">

